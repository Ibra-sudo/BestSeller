<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/women_image" />

        <TextView
            android:id="@+id/girls_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="CLOTHING"
            android:textColor="#5C5C5C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/women_shoes_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="SHOES"
            android:textColor="#5C5C5C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/girls_categories"
            app:layout_constraintStart_toStartOf="@+id/girls_categories"
            app:layout_constraintTop_toBottomOf="@+id/girls_categories" />

        <TextView
            android:id="@+id/women_sports_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="SPORTS"
            android:textColor="#5C5C5C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/women_shoes_categories"
            app:layout_constraintStart_toStartOf="@+id/women_shoes_categories"
            app:layout_constraintTop_toBottomOf="@+id/women_shoes_categories" />

        <TextView
            android:id="@+id/women_accessories_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="ACCESSORIES"
            android:textColor="#5C5C5C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/women_sports_categories"
            app:layout_constraintStart_toStartOf="@+id/women_sports_categories"
            app:layout_constraintTop_toBottomOf="@+id/women_sports_categories" />

        <TextView
            android:id="@+id/women_designer_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="DESIGNER"
            android:textColor="#5C5C5C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/women_accessories_categories"
            app:layout_constraintStart_toStartOf="@+id/women_accessories_categories"
            app:layout_constraintTop_toBottomOf="@+id/women_accessories_categories" />

        <TextView
            android:id="@+id/women_magazine_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="MAGAZINE"
            android:textColor="#5C5C5C"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/women_designer_categories"
            app:layout_constraintStart_toStartOf="@+id/women_designer_categories"
            app:layout_constraintTop_toBottomOf="@+id/women_designer_categories" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>