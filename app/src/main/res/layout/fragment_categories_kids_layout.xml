<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kid_image" />

        <TextView
            android:id="@+id/girls_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="GIRLS"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/boys_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="BOYS"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/girls_categories"
            app:layout_constraintStart_toStartOf="@+id/girls_categories"
            app:layout_constraintTop_toBottomOf="@+id/girls_categories" />

        <TextView
            android:id="@+id/babies_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="BABIES"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/boys_categories"
            app:layout_constraintStart_toStartOf="@+id/boys_categories"
            app:layout_constraintTop_toBottomOf="@+id/boys_categories" />

        <TextView
            android:id="@+id/kids_sports_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="SPORTS"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/babies_categories"
            app:layout_constraintStart_toStartOf="@+id/babies_categories"
            app:layout_constraintTop_toBottomOf="@+id/babies_categories" />

        <TextView
            android:id="@+id/kids_designer_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="DESIGNER"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/kids_sports_categories"
            app:layout_constraintStart_toStartOf="@+id/kids_sports_categories"
            app:layout_constraintTop_toBottomOf="@+id/kids_sports_categories" />

        <TextView
            android:id="@+id/kids_magazine_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/trispace_extralight"
            android:text="MAGAZINE"
            android:textColor="#070707"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/kids_designer_categories"
            app:layout_constraintStart_toStartOf="@+id/kids_designer_categories"
            app:layout_constraintTop_toBottomOf="@+id/kids_designer_categories" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>